<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Item Management</title>
    <link href="/productlist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/productlist/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="/productlist/css/sb-admin.css" rel="stylesheet">
    <link href="/productlist/css/custom.css" rel="stylesheet">
</head>

<body>
    <div id="wrapper">
        <nav class="navbar-default navbar-fixed-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html">Administrator</a>
            </div>
            <ul class="nav navbar-top-links navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="#"><i class="fa fa-user fa-fw"></i> User Profile</a></li>
                        <li><a href="#"><i class="fa fa-gear fa-fw"></i> Settings</a></li>
                        <li class="divider"></li>
                        <li><a href="login.html"><i class="fa fa-sign-out fa-fw"></i> Logout</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Item Management</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            List Items
                        </div>
                        <div class="panel-body">
                            <form role="form" class="form-inline zt-form" id="zt-form" action="" method="post">
                                <div class="zcontrols">
                                    <select name="action" class="form-control slbAction">
                                        <option value="">Bulk Action</option>
                                        <option value="admin123/item/change-status/active">Active</option>
                                        <option value="admin123/item/change-status/inactive">InActive</option>
                                        <option value="admin123/item/save-ordering/">Change Ordering</option>
                                        <option value="admin123/item/delete/">Delete</option>
                                    </select>
                                    <div class="col-sm-3 slbAction">
                                        <form action="admin123/item/all" method="GET">
                                            <div class="input-group">
                                                <input type="text" class="form-control" name="search"
                                                    placeholder="Search for..." value="">
                                                <input type="hidden" value="all">
                                                <span class="input-group-btn">
                                                    <button class="btn btn-info" type="submit">Search</button>
                                                </span>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="pull-right">
                                        <a href="#" type="button" class="btn btn-warning btn-addNew" data-toggle="modal" data-target="#itemModal" onclick="showForm(null)">Add New</a>
                                    </div>
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Name</th>
                                                <th>Status</th>
                                                <th>Ordering</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>1</td>
                                                <td>Super Admin</td>
                                                <td>
                                                    <a
                                                        href="admin123/item/change-status/5a9e5a96da67bc078421d7d6/active">
                                                        <span class="label label-success">active</span>
                                                    </a>
                                                </td>
                                                <td><input type="number" value="2" class="text-center ordering"></td>
                                                <td>
                                                    <a href="#" type="button" class="btn btn-warning btn-sm"
                                                        data-toggle="modal" data-target="#itemModal"
                                                        onclick="showForm('5a9e5a96da67bc078421d7d6')">Edit</a>
                                                    <a href="admin123/item/delete/5a9e5a96da67bc078421d7d6"
                                                        type="button"
                                                        class="btn btn-danger btn-sm btn-delete">Delete</a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <!-- Modal -->
                                    <div class="modal fade" id="itemModal" tabindex="-1" role="dialog"
                                        aria-labelledby="itemModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="itemModalLabel">Item Form</h5>
                                                    <button type="button" class="close" data-dismiss="modal"
                                                        aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <form id="itemForm">
                                                        <div class="form-group">
                                                            <label for="itemName">Name</label>
                                                            <input type="text" class="form-control" id="itemName"
                                                                name="name" required>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="itemStatus">Status</label>
                                                            <select class="form-control" id="itemStatus" name="status"
                                                                required>
                                                                <option value="active">Active</option>
                                                                <option value="inactive">Inactive</option>
                                                            </select>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="itemOrdering">Ordering</label>
                                                            <input type="number" class="form-control" id="itemOrdering"
                                                                name="ordering" required>
                                                        </div>
                                                        <input type="hidden" id="itemId" name="id">
                                                        <button type="submit" class="btn btn-primary">Save</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/productlist/js/jquery-1.10.2.js"></script>
    <script src="/productlist/js/bootstrap.min.js"></script>
    <script src="/productlist/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="/productlist/js/sb-admin.js"></script>
    <script src="/productlist/js/jquery-ui.js"></script>
    <script src="/productlist/js/custom.js"></script>
    <script>
        function showForm(itemId) {
            if (itemId) {
                const itemData = {
                    id: itemId,
                    name: 'Super Admin',
                    status: 'active',
                    ordering: 2
                };
                document.getElementById('itemId').value = itemData.id;
                document.getElementById('itemName').value = itemData.name;
                document.getElementById('itemStatus').value = itemData.status;
                document.getElementById('itemOrdering').value = itemData.ordering;
            } else {
                document.getElementById('itemForm').reset();
                document.getElementById('itemId').value = '';
            }
        }
        document.getElementById('itemForm').addEventListener('submit', function (event) {
            event.preventDefault();
            console.log('Form submitted');
            $('#itemModal').modal('hide');
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>